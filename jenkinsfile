node {
 stage('Git-Checkout for ansible') {
   git 'https://github.com/Aaditigupta/Ansible.git'
  }
  stage('Geting Ready For Ansible') {
    def server= Artifactory.server 'Artifactory'
        def downloadSpec = """{
            "files": [{
            "pattern": "petclinic/petclinic.war",
            "target": "ansible/templates/apps/" }]
        }"""
    server.download(downloadSpec) 
  sh label: 'Jenkins', script: "echo '<h1> TASK BUILD ID: ${env.BUILD_DISPLAY_NAME}</h1>' > ansible/templates/apps/index.html"
 }
  def project_ansible="ansible"
  dir(project_ansible) { 
  stage('Prod Deployment on AWS'){
 sh label: 'terraform', script: 'ansible-playbook -i /root/.jenkins/workspace/etclinic-branches_Infrastructure/04-Terraform/03-Ansible-Deploy/jenkins-ci.ini -u ubuntu --key /root/.ssh/aditikey.pem web-playbook.yaml'
     } 
   }
}
